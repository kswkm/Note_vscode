-----------------------------------------------------------------------------------------------------------------
dbdiagram(ERD) ->  https://dbdiagram.io/d/693117e3d6676488ba862724 
Table users {
  user_id int [pk, increment]
  password varchar(255)
  email varchar(100)
}

Table categories {
  category_id int [pk, increment]
  category_name varchar(50)
}

Table products {
  product_id int [pk, increment]
  product_name varchar(100)
  price decimal(10,2)
  status enum('ACTIVE', 'INACTIVE')
  category_id int
}

Ref: products.category_id > categories.category_id

Table orders {
  order_id int [pk, increment]
  user_id int
  status enum('PENDING', 'PAID', 'SHIPPED', 'CANCELLED')
}

Ref: orders.user_id > users.user_id

Table order_items {
  order_item_id int [pk, increment]
  order_id int
  product_id int
}

Ref: order_items.order_id > orders.order_id
Ref: order_items.product_id > products.product_id
